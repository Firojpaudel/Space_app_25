# Environment Configuration - Using 100% FREE APIs
# Copy this file to .env and fill in your actual API keys

# Google Gemini API (FREE: 15 requests/minute, 1M tokens/day)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone Vector Database (FREE: 1 pod, 5GB storage, 100K queries/month)
# Get your API key from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=space-biology-index


# NASA APIs (FREE with registration)
# Get your API key from: https://api.nasa.gov/
NASA_API_KEY=your_nasa_api_key_here  #--> wil be using in future for now RAG is working fine

# Application Settings
APP_NAME=Space Biology Knowledge Engine
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Data Sources
CSV_DATA_PATH=data/raw/SB_publication_PMC.csv
OSDR_BASE_URL=https://osdr.nasa.gov/bio/repo
TASKBOOK_BASE_URL=https://taskbook.nasaprs.com

# Model Settings - Gemini 2.0 Flash (FREE)
EMBEDDING_MODEL=models/text-embedding-004
LLM_MODEL=gemini-2.5-flash
MAX_TOKENS=8192
TEMPERATURE=0.2

# Database Settings
VECTOR_DB_TYPE=pinecone
CHUNK_SIZE=512
CHUNK_OVERLAP=50
BATCH_SIZE=25